/* ==========================================================================
   MindLink 小程序 - 全局样式
   对齐移动端设计系统
   ========================================================================== */

/* 设计变量 - 通过 page 级别设置 */
page {
  --bg-deep: #05050A;
  --bg-surface: rgba(20, 20, 30, 0.6);
  --bg-glass: rgba(255, 255, 255, 0.03);
  --bg-glass-heavy: rgba(10, 10, 15, 0.85);

  --accent-primary: #00E5FF;
  --accent-secondary: #7B61FF;
  --accent-error: #FF4444;

  --text-main: #FFFFFF;
  --text-muted: #8F9BB3;
  --text-faint: #4A5568;

  --border-subtle: rgba(255, 255, 255, 0.08);
  --radius-lg: 24rpx;

  background-color: var(--bg-deep);
  color: var(--text-main);
  font-family: -apple-system, BlinkMacSystemFont, 'SF Pro Display', 'Segoe UI', Roboto, sans-serif;
  font-size: 28rpx;
  line-height: 1.6;
  overflow-x: hidden;

  /* 背景渐变 */
  background-image:
    radial-gradient(circle at 10% 20%, rgba(123, 97, 255, 0.15) 0%, transparent 40%),
    radial-gradient(circle at 90% 80%, rgba(0, 229, 255, 0.1) 0%, transparent 40%);
}

/* 禁用横向滚动 */
page, .container {
  overflow-x: hidden;
  width: 100%;
  max-width: 100vw;
}

/* 通用容器 */
.container {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}

/* 通用文本样式 */
.text-primary { color: var(--accent-primary); }
.text-muted { color: var(--text-muted); }
.text-faint { color: var(--text-faint); }

/* 隐藏滚动条 */
::-webkit-scrollbar {
  display: none;
}

/* 按钮基础样式 */
.btn-primary {
  background: linear-gradient(135deg, var(--accent-secondary), var(--accent-primary));
  color: #000;
  font-weight: 600;
  padding: 28rpx;
  border-radius: 48rpx;
  text-align: center;
  box-shadow: 0 8rpx 40rpx rgba(0, 229, 255, 0.2);
}

.btn-primary:active {
  transform: scale(0.97);
  opacity: 0.9;
}

.btn-secondary {
  background: rgba(255, 255, 255, 0.05);
  color: var(--accent-primary);
  border: 2rpx solid var(--border-subtle);
  padding: 20rpx 40rpx;
  border-radius: 16rpx;
  text-align: center;
}

/* 输入框样式 */
.input-field {
  width: 100%;
  background: rgba(255, 255, 255, 0.05);
  border: 2rpx solid var(--border-subtle);
  border-radius: 20rpx;
  padding: 24rpx 28rpx;
  color: var(--text-main);
  font-size: 30rpx;
  box-sizing: border-box;
}

.input-field:focus {
  border-color: var(--accent-secondary);
}

.placeholder {
  color: rgba(255, 255, 255, 0.2);
}

/* 卡片样式 */
.card {
  background: rgba(255, 255, 255, 0.03);
  border: 2rpx solid var(--border-subtle);
  border-radius: 24rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

/* Loading 动画 */
.loading-pulse {
  animation: pulse 1.5s infinite ease-in-out;
}

@keyframes pulse {
  0%, 100% { opacity: 0.4; }
  50% { opacity: 1; }
}

/* 空状态 */
.empty-hint {
  color: var(--text-muted);
  font-size: 28rpx;
  text-align: center;
  padding: 40rpx;
}

/* 弹窗通用样式 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.7);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 999;
}

.modal-content {
  width: 600rpx;
  background: #1A1D26;
  border-radius: 32rpx;
  padding: 48rpx;
  border: 2rpx solid var(--border-subtle);
  box-shadow: 0 40rpx 100rpx rgba(0, 0, 0, 0.5);
}

.modal-title {
  display: block;
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 16rpx;
}

.modal-hint {
  display: block;
  font-size: 26rpx;
  color: var(--text-muted);
  margin-bottom: 32rpx;
}

.modal-input {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background: rgba(0, 0, 0, 0.3);
  border: 2rpx solid var(--border-subtle);
  border-radius: 16rpx;
  padding: 0 24rpx;
  color: #fff;
  font-size: 30rpx;
  margin-bottom: 32rpx;
  box-sizing: border-box;
}

.modal-textarea {
  width: 100%;
  background: rgba(0, 0, 0, 0.3);
  border: 2rpx solid var(--border-subtle);
  border-radius: 16rpx;
  padding: 24rpx;
  color: #fff;
  font-size: 28rpx;
  margin-bottom: 32rpx;
  min-height: 200rpx;
  box-sizing: border-box;
}

.modal-actions {
  display: flex;
  justify-content: flex-end;
  gap: 24rpx;
}

.modal-btn {
  padding: 20rpx 36rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
}

.modal-btn.cancel {
  color: var(--text-muted);
}

.modal-btn.confirm {
  background: var(--accent-primary);
  color: #000;
  font-weight: 600;
}

.modal-btn.delete {
  color: var(--accent-error);
}
