/* 登录页样式 */
.container {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
  background: linear-gradient(135deg, #0B0C0F 0%, #1a1a2e 100%);
}

.login-card {
  width: 100%;
  max-width: 640rpx;
  background: rgba(255, 255, 255, 0.03);
  border: 2rpx solid rgba(255, 255, 255, 0.1);
  border-radius: 32rpx;
  padding: 60rpx 40rpx;
}

/* Logo 区域 */
.logo-section {
  text-align: center;
  margin-bottom: 60rpx;
}

.logo-icon {
  font-size: 100rpx;
  margin-bottom: 20rpx;
}

.logo-title {
  display: block;
  font-size: 48rpx;
  font-weight: 600;
  color: #fff;
  margin-bottom: 12rpx;
}

.logo-subtitle {
  display: block;
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.5);
}

/* 错误提示 */
.error-box {
  background: rgba(255, 68, 68, 0.1);
  border: 2rpx solid rgba(255, 68, 68, 0.3);
  border-radius: 16rpx;
  padding: 20rpx 24rpx;
  margin-bottom: 32rpx;
}

.error-text {
  color: #ff6b6b;
  font-size: 26rpx;
}

/* 表单 */
.form-section {
  margin-bottom: 40rpx;
}

.input-group {
  margin-bottom: 32rpx;
}

.input-label {
  display: block;
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.7);
  margin-bottom: 12rpx;
}

.input-field {
  width: 100%;
  height: 96rpx;
  background: rgba(255, 255, 255, 0.05);
  border: 2rpx solid rgba(255, 255, 255, 0.1);
  border-radius: 16rpx;
  padding: 0 24rpx;
  font-size: 30rpx;
  color: #fff;
  box-sizing: border-box;
}

.input-field:focus {
  border-color: var(--accent-primary);
}

.placeholder {
  color: rgba(255, 255, 255, 0.3);
}

.btn-primary {
  width: 100%;
  height: 96rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: var(--accent-primary);
  color: #000;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 16rpx;
  margin-top: 48rpx;
}

.btn-primary:active {
  opacity: 0.8;
  transform: scale(0.98);
}

.btn-primary.disabled {
  opacity: 0.5;
  pointer-events: none;
}

/* 提示 */
.hint-section {
  text-align: center;
}

.hint-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.4);
}

/* 返回链接 */
.back-link {
  margin-top: 48rpx;
  padding: 20rpx 40rpx;
}

.back-link text {
  font-size: 28rpx;
  color: var(--accent-primary);
}
